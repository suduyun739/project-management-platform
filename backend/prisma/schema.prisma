// Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户模型
model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  name      String
  email     String?  @unique
  role      Role     @default(MEMBER)
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 关联关系
  createdProjects Project[]      @relation("ProjectCreator")
  requirements    Requirement[]  @relation("RequirementAssignee")
  tasks           Task[]         @relation("TaskAssignee")
  comments        Comment[]

  @@map("users")
}

// 角色枚举
enum Role {
  ADMIN   // 管理员
  MEMBER  // 普通成员
}

// 项目模型
model Project {
  id          String        @id @default(uuid())
  name        String
  description String?
  status      ProjectStatus @default(ACTIVE)
  creatorId   String
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // 关联关系
  creator      User          @relation("ProjectCreator", fields: [creatorId], references: [id])
  requirements Requirement[]
  tasks        Task[]

  @@map("projects")
}

// 项目状态
enum ProjectStatus {
  ACTIVE    // 进行中
  COMPLETED // 已完成
  ARCHIVED  // 已归档
}

// 需求模型
model Requirement {
  id          String             @id @default(uuid())
  title       String
  description String?
  priority    Priority           @default(MEDIUM)
  status      RequirementStatus  @default(PENDING)
  projectId   String
  assigneeId  String?
  estimatedHours Float?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  // 关联关系
  project  Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee User?     @relation("RequirementAssignee", fields: [assigneeId], references: [id])
  tasks    Task[]
  comments Comment[]

  @@map("requirements")
}

// 需求状态
enum RequirementStatus {
  PENDING     // 待处理
  IN_PROGRESS // 进行中
  COMPLETED   // 已完成
  REJECTED    // 已拒绝
}

// 任务模型
model Task {
  id            String      @id @default(uuid())
  title         String
  description   String?
  priority      Priority    @default(MEDIUM)
  status        TaskStatus  @default(TODO)
  projectId     String
  requirementId String?
  assigneeId    String?
  estimatedHours Float?
  actualHours   Float?
  startDate     DateTime?
  dueDate       DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // 关联关系
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  requirement Requirement? @relation(fields: [requirementId], references: [id], onDelete: SetNull)
  assignee    User?        @relation("TaskAssignee", fields: [assigneeId], references: [id])
  comments    Comment[]

  @@map("tasks")
}

// 任务状态
enum TaskStatus {
  TODO        // 待处理
  IN_PROGRESS // 进行中
  TESTING     // 测试中
  DONE        // 已完成
  BLOCKED     // 已阻塞
}

// 优先级
enum Priority {
  LOW    // 低
  MEDIUM // 中
  HIGH   // 高
  URGENT // 紧急
}

// 评论模型
model Comment {
  id            String   @id @default(uuid())
  content       String
  userId        String
  requirementId String?
  taskId        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // 关联关系
  user        User         @relation(fields: [userId], references: [id])
  requirement Requirement? @relation(fields: [requirementId], references: [id], onDelete: Cascade)
  task        Task?        @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@map("comments")
}
